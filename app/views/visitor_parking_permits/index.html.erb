<div class="page-header">
  <h1>
    Visitor parking permits
    <a href="/visitor_parking_permits/new" class="btn btn-lg btn-success">New Visitor parking permit</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Resident</th>
        <th>Valid date</th>
        <th>Expiration date</th>
        <th>Activation code</th>
        <th>Actions</th>
      </tr>

      <% @visitor_parking_permits.each do |visitor_parking_permit| %>
      <tr>
        <td>
          <% if visitor_parking_permit.resident.present? %>
            <a href="/users/<%= visitor_parking_permit.resident.id %>">
              <%= visitor_parking_permit.resident.username %>
            </a>
          <% end %>
        </td>
        <td><%= visitor_parking_permit.valid_date %></td>
        <td><%= visitor_parking_permit.expiration_date %></td>
        <td><%= visitor_parking_permit.activation_code %></td>
        <td>
          <a href="/visitor_parking_permits/<%= visitor_parking_permit.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == visitor_parking_permit.resident %>
            <a href="/visitor_parking_permits/<%= visitor_parking_permit.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_visitor_parking_permit/<%= visitor_parking_permit.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @visitor_parking_permits, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
