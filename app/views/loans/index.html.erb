<div class="page-header">
  <h1>
    Loans
    <a href="/loans/new" class="btn btn-lg btn-success">New Loan</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Vehicle</th>
        <th>Permit</th>
        <th>Start time</th>
        <th>End time</th>
        <th>Actions</th>
      </tr>

      <% @loans.each do |loan| %>
      <tr>
        <td>
          <% if loan.vehicle.present? %>
            <a href="/vehicles/<%= loan.vehicle.id %>">
              <%= loan.vehicle.nickname %>
            </a>
          <% end %>
        </td>
        <td>
          <% if loan.visitor_parking_permit.present? %>
            <a href="/visitor_parking_permits/<%= loan.visitor_parking_permit.id %>">
              <%= loan.visitor_parking_permit.resident_id %>
            </a>
          <% end %>
        </td>
        <td><%= loan.start_time %></td>
        <td><%= loan.end_time %></td>
        <td>
          <a href="/loans/<%= loan.id %>" class="btn btn-primary">Show</a>
          <a href="/loans/<%= loan.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_loan/<%= loan.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @loans, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
